<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayActivity"
    android:layout_marginHorizontal="10dp">

    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_arrow_back_24"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thanh Toán"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txtShippingAddressTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ giao hàng"
            android:textSize="24sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Thông tin giao hàng -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/linearLayoutAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtDeliveryTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giao đến"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/linearLayoutContactInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtNameAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/txtPhoneAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="phone"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtAddressAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="address"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnChangeAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thay đổi"
                    android:textColor="#2196F3"
                    android:background="@android:color/transparent"
                    android:textSize="14sp"
                    android:layout_gravity="end" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Đường kẻ ngang -->
        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:layout_marginVertical="8dp" />

        <!-- Phương thức vận chuyển -->
        <TextView
            android:id="@+id/txtShippingMethodTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phương thức vận chuyển"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewShippingMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/linearLayoutShippingMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <RadioGroup
                    android:id="@+id/radioGroupShipping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Giao hàng nhanh -->
                    <LinearLayout
                        android:id="@+id/linearLayoutFastDelivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <RadioButton
                            android:id="@+id/radioFastDelivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/linearLayoutFastDeliveryInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/txtFastDelivery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Giao hàng nhanh"
                                android:textSize="16sp"
                                android:textColor="#333333" />

<!--                            <TextView-->
<!--                                android:id="@+id/txtFastDeliveryDesc"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:text="Dij × di+1 - di = 0"-->
<!--                                android:textSize="12sp"-->
<!--                                android:textColor="#666666" />-->

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtFastDeliveryPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25.000đ"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Giao hàng hoả tốc -->
                    <LinearLayout
                        android:id="@+id/linearLayoutExpressDelivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <RadioButton
                            android:id="@+id/radioExpressDelivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/linearLayoutExpressDeliveryInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/txtExpressDelivery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Giao hàng hoả tốc"
                                android:textSize="16sp"
                                android:textColor="#333333" />

                            <TextView
                                android:id="@+id/txtExpressDeliveryDesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Trong ngày"
                                android:textSize="12sp"
                                android:textColor="#666666" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtExpressDeliveryPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40.000đ"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Phương thức thanh toán -->
        <TextView
            android:id="@+id/txtPaymentMethodTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/linearLayoutPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <RadioGroup
                    android:id="@+id/radioGroupPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Thanh toán khi nhận hàng -->
                    <LinearLayout
                        android:id="@+id/linearLayoutPayOff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <RadioButton
                            android:id="@+id/radioPayOff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txtPayOff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thanh toán khi nhận hàng"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                    <!-- Thanh toán online -->
                    <LinearLayout
                        android:id="@+id/linearLayoutPayOnline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <RadioButton
                            android:id="@+id/radioPayOnline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txtPayOnline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thanh toán online"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tóm tắt đơn hàng -->
        <TextView
            android:id="@+id/txtOrderSummaryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tóm tắt đơn hàng"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewOrderSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:id="@+id/linearLayoutOrderSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Tạm tính -->
                <LinearLayout
                    android:id="@+id/linearLayoutSubtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/txtSubtotalLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tạm tính"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/txtSubtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.000đ"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                </LinearLayout>

                <!-- Phí vận chuyển -->
                <LinearLayout
                    android:id="@+id/linearLayoutShippingFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/txtShippingFeeLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phí vận chuyển"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/txtShipping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.000đ"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                </LinearLayout>

                <!-- Đường kẻ ngang -->
                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e0e0"
                    android:layout_marginBottom="12dp" />

                <!-- Tổng cộng -->
                <LinearLayout
                    android:id="@+id/linearLayoutTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTotalLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tổng cộng"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.000đ"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Nút Tiếp tục -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiếp tục"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#2196F3"
            app:backgroundTint="@null"
            android:padding="16dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>