<!DOCTYPE html>
<html class="dark" lang="vi">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Quản lý banner - Admin</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont,
          "Segoe UI", sans-serif;
      }
      .scrollbar-thin::-webkit-scrollbar {
        width: 6px;
        height: 6px;
      }
      .scrollbar-thin::-webkit-scrollbar-thumb {
        background-color: rgba(148, 163, 184, 0.8);
        border-radius: 9999px;
      }
      .banner-card {
        transition: all 0.3s ease;
      }
      .banner-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.3);
      }
    </style>
  </head>

  <body class="bg-slate-950 text-slate-100">
    <div class="flex min-h-screen">
      <!-- Mobile menu button -->
      <button
        id="mobileMenuBtn"
        class="md:hidden fixed top-4 left-4 z-30 p-2 rounded-lg bg-slate-800 text-slate-100 hover:bg-slate-700"
      >
        <span class="material-symbols-outlined text-xl">menu</span>
      </button>

      <!-- Sidebar -->
      <aside
        id="sidebar"
        class="hidden md:flex w-64 flex-col border-r border-slate-800 bg-slate-950/80 backdrop-blur fixed left-0 top-0 h-screen z-20 overflow-y-auto"
      >
        <!-- Close button for mobile -->
        <button
          id="closeSidebarBtn"
          class="md:hidden absolute top-4 right-4 p-2 rounded-lg bg-slate-800 text-slate-100 hover:bg-slate-700"
        >
          <span class="material-symbols-outlined text-xl">close</span>
        </button>
        <div class="flex items-center gap-3 px-6 pt-6 pb-4">
          <div
            class="flex h-10 w-10 items-center justify-center rounded-xl bg-blue-600 text-lg font-black"
          >
            CH
          </div>
          <div>
            <p class="text-sm text-slate-400">Admin</p>
            <p class="text-base font-semibold">ClosetHub Panel</p>
          </div>
        </div>

        <nav class="mt-4 flex-1 px-3 space-y-1">
          <a
            href="/admin/dashboard"
            class="flex items-center gap-3 rounded-lg px-3 py-2 text-sm text-slate-400 hover:bg-slate-800 hover:text-white"
          >
            <span class="material-symbols-outlined text-xl"
              >space_dashboard</span
            >
            <span>Dashboard</span>
          </a>

          <a
            href="/admin/products"
            class="flex items-center gap-3 rounded-lg px-3 py-2 text-sm text-slate-400 hover:bg-slate-800 hover:text-white"
          >
            <span class="material-symbols-outlined text-xl"> inventory_2 </span>
            <span>Sản phẩm</span>
          </a>

          <a
            href="/admin/orders"
            class="flex items-center gap-3 rounded-lg px-3 py-2 text-sm text-slate-400 hover:bg-slate-800 hover:text-white"
          >
            <span class="material-symbols-outlined text-xl">
              receipt_long
            </span>
            <span>Đơn hàng</span>
          </a>

          <a
            href="/admin/customers"
            class="flex items-center gap-3 rounded-lg px-3 py-2 text-sm text-slate-400 hover:bg-slate-800 hover:text-white"
          >
            <span class="material-symbols-outlined text-xl"> group </span>
            <span>Khách hàng</span>
          </a>

          <a
            href="/admin/statistics"
            class="flex items-center gap-3 rounded-lg px-3 py-2 text-sm text-slate-400 hover:bg-slate-800 hover:text-white"
          >
            <span class="material-symbols-outlined text-xl"> insights </span>
            <span>Thống kê</span>
          </a>

          <a
            href="/admin/banners"
            class="flex items-center gap-3 rounded-lg px-3 py-2 text-sm bg-slate-800 text-white"
          >
            <span class="material-symbols-outlined text-xl"> image </span>
            <span>Banner</span>
          </a>
        </nav>

        <div class="mt-auto border-t border-slate-800 px-4 py-4">
          <button
            id="logoutBtn"
            class="flex w-full items-center justify-center gap-2 rounded-lg bg-slate-800 px-3 py-2 text-sm font-medium text-slate-100 hover:bg-slate-700"
          >
            <span class="material-symbols-outlined text-xl">logout</span>
            <span>Đăng xuất</span>
          </button>
        </div>
      </aside>

      <!-- Sidebar overlay for mobile -->
      <div
        id="sidebarOverlay"
        class="hidden fixed inset-0 bg-black/50 z-10 md:hidden"
      ></div>

      <!-- Main content -->
      <main class="flex-1 bg-slate-950 md:ml-64">
        <!-- Top bar -->
        <header
          class="flex items-center justify-between border-b border-slate-800 px-4 md:px-8 py-4 bg-slate-950/80 backdrop-blur sticky top-0 z-20"
        >
          <div>
            <p class="text-xs uppercase tracking-[0.2em] text-slate-500">
              Bảng quản trị
            </p>
            <h1 class="text-xl md:text-2xl font-semibold">Quản lý banner</h1>
            <p class="text-xs text-slate-500">
              Thêm, sửa, xóa và quản lý banner khuyến mãi trong hệ thống.
            </p>
          </div>

          <div class="flex items-center gap-4">
            <div class="hidden sm:flex flex-col items-end">
              <p class="text-sm font-medium" id="currentUserName">Admin</p>
              <p class="text-xs text-slate-500" id="currentUserEmail"></p>
            </div>
            <div
              class="flex h-9 w-9 items-center justify-center rounded-full bg-slate-800 text-sm font-semibold"
            >
              A
            </div>
          </div>
        </header>

        <div class="px-4 md:px-8 py-6 flex flex-col gap-6">
          <!-- Filters & search -->
          <section
            class="flex flex-col md:flex-row md:items-center gap-3 md:gap-4"
          >
            <div
              class="flex flex-1 items-center gap-2 rounded-lg border border-slate-800 bg-slate-900/60 px-3 py-2"
            >
              <span class="material-symbols-outlined text-slate-500">
                search
              </span>
              <input
                id="searchInput"
                type="text"
                placeholder="Tìm kiếm banner theo tên..."
                class="bg-transparent text-sm flex-1 outline-none placeholder:text-slate-500"
              />
            </div>

            <select
              id="statusFilter"
              class="h-10 rounded-lg border border-slate-800 bg-slate-900/60 px-3 text-sm text-slate-200"
            >
              <option value="">Tất cả</option>
              <option value="false">Đang hoạt động</option>
              <option value="true">Đã xóa</option>
            </select>

            <button
              id="addBannerBtnMobile"
              class="sm:hidden flex items-center justify-center gap-2 rounded-lg bg-blue-600 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-500"
            >
              <span class="material-symbols-outlined text-base">add</span>
              <span>Thêm banner</span>
            </button>
          </section>

          <!-- Main grid -->
          <section
            class="grid grid-cols-1 xl:grid-cols-[minmax(0,2fr)_minmax(0,1fr)] gap-6"
          >
            <!-- Banners grid -->
            <div
              class="rounded-xl border border-slate-800 bg-slate-900/60 shadow-xl overflow-hidden flex flex-col"
            >
              <div
                class="flex items-center justify-between px-4 md:px-6 py-3 border-b border-slate-800"
              >
                <p class="text-sm font-semibold">Danh sách banner</p>
                <p class="text-xs text-slate-500">
                  Hiển thị
                  <span id="bannerCount" class="font-semibold text-slate-200"
                    >0</span
                  >
                  banner
                </p>
              </div>

              <div
                class="overflow-auto scrollbar-thin flex-1 min-h-[500px] p-4"
              >
                <div
                  id="bannerList"
                  class="grid grid-cols-1 md:grid-cols-2 gap-4"
                >
                  <!-- JS render banners -->
                </div>
              </div>
            </div>

            <!-- Right column: add/edit banner form -->
            <div class="flex flex-col gap-6">
              <!-- Add/Edit banner form -->
              <div
                class="rounded-xl border border-slate-800 bg-slate-900/60 shadow-xl"
              >
                <div
                  class="flex items-center justify-between px-4 md:px-6 py-3 border-b border-slate-800"
                >
                  <p class="text-sm font-semibold" id="bannerFormTitle">
                    Thêm banner mới
                  </p>
                </div>

                <form
                  id="bannerForm"
                  class="px-4 md:px-6 py-4 flex flex-col gap-4"
                  enctype="multipart/form-data"
                >
                  <input type="hidden" id="editingBannerId" name="banner_id" />

                  <div>
                    <label class="text-xs text-slate-400 mb-1 block"
                      >Tên banner *</label
                    >
                    <input
                      type="text"
                      id="bannerName"
                      name="name"
                      required
                      class="mt-1 h-10 w-full rounded-lg border border-slate-800 bg-slate-950/50 px-3 text-sm outline-none focus:ring-1 focus:ring-blue-500"
                      placeholder="Nhập tên banner"
                    />
                  </div>

                  <div>
                    <label class="text-xs text-slate-400 mb-1 block"
                      >Ảnh banner *</label
                    >
                    <div
                      class="mt-1 rounded-lg border-2 border-dashed border-slate-700 bg-slate-950/30 p-4"
                    >
                      <input
                        type="file"
                        id="bannerImage"
                        name="image"
                        accept="image/*"
                        class="block w-full text-sm text-slate-400 file:mr-4 file:rounded-lg file:border-0 file:bg-blue-600 file:px-4 file:py-2 file:text-sm file:font-semibold file:text-white hover:file:bg-blue-500 file:cursor-pointer"
                      />
                      <p class="text-[10px] text-slate-500 mt-2">
                        Chọn file ảnh (JPG, PNG, GIF)
                      </p>
                    </div>
                    <div id="bannerImagePreview" class="mt-3 hidden">
                      <p class="text-xs text-slate-400 mb-2">Preview:</p>
                      <div
                        class="relative rounded-lg border border-slate-800 overflow-hidden bg-slate-900/40"
                      >
                        <img
                          id="previewBannerImg"
                          src=""
                          alt="Preview"
                          class="w-full h-48 object-cover"
                        />
                        <button
                          type="button"
                          onclick="clearImagePreview()"
                          class="absolute top-2 right-2 p-1.5 rounded-full bg-slate-900/80 hover:bg-slate-800 text-slate-300"
                        >
                          <span class="material-symbols-outlined text-sm"
                            >close</span
                          >
                        </button>
                      </div>
                    </div>
                  </div>

                  <p id="bannerFormMessage" class="hidden text-xs mt-1"></p>

                  <div class="flex justify-end gap-2 pt-2">
                    <button
                      type="button"
                      id="resetBannerForm"
                      class="h-9 rounded-lg border border-slate-700 px-3 text-xs font-medium text-slate-200 hover:bg-slate-800 transition-colors"
                    >
                      Huỷ
                    </button>
                    <button
                      type="submit"
                      id="submitBannerBtn"
                      class="h-9 rounded-lg bg-blue-600 px-4 text-xs font-semibold text-white hover:bg-blue-500 transition-colors"
                    >
                      <span id="submitButtonText">Lưu banner</span>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </section>
        </div>
      </main>
    </div>

    <!-- Google Icons -->
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
      rel="stylesheet"
    />

    <script>
      const token = localStorage.getItem("auth_token");
      const user = JSON.parse(localStorage.getItem("auth_user") || "null");

      // Nếu chưa đăng nhập thì quay lại /login
      if (!token) {
        window.location.href = "/login";
      }

      // Hiển thị thông tin user
      if (user) {
        document.getElementById("currentUserName").textContent =
          user.fullname || user.name || "Admin";
        document.getElementById("currentUserEmail").textContent =
          user.email || "";
      }

      const bannerList = document.getElementById("bannerList");
      const bannerCount = document.getElementById("bannerCount");
      const searchInput = document.getElementById("searchInput");
      const statusFilter = document.getElementById("statusFilter");
      const addBannerBtnMobile = document.getElementById("addBannerBtnMobile");
      const bannerForm = document.getElementById("bannerForm");
      const bannerFormMessage = document.getElementById("bannerFormMessage");
      const resetBannerFormButton = document.getElementById("resetBannerForm");
      const submitBannerBtn = document.getElementById("submitBannerBtn");
      const bannerFormTitle = document.getElementById("bannerFormTitle");
      const submitButtonText = document.getElementById("submitButtonText");
      const logoutBtn = document.getElementById("logoutBtn");
      const mobileMenuBtn = document.getElementById("mobileMenuBtn");
      const sidebar = document.getElementById("sidebar");
      const sidebarOverlay = document.getElementById("sidebarOverlay");
      const closeSidebarBtn = document.getElementById("closeSidebarBtn");

      let allBanners = [];
      let isEditMode = false;

      // Mobile menu toggle
      function toggleMobileMenu() {
        if (sidebar && sidebarOverlay) {
          const isHidden = sidebar.classList.contains("hidden");
          if (isHidden) {
            sidebar.classList.remove("hidden");
            sidebar.classList.add("flex");
            sidebarOverlay.classList.remove("hidden");
          } else {
            sidebar.classList.add("hidden");
            sidebar.classList.remove("flex");
            sidebarOverlay.classList.add("hidden");
          }
        }
      }

      if (mobileMenuBtn) {
        mobileMenuBtn.addEventListener("click", toggleMobileMenu);
      }

      if (sidebarOverlay) {
        sidebarOverlay.addEventListener("click", toggleMobileMenu);
      }

      if (closeSidebarBtn) {
        closeSidebarBtn.addEventListener("click", toggleMobileMenu);
      }

      if (sidebar) {
        sidebar.querySelectorAll("nav a").forEach((link) => {
          link.addEventListener("click", () => {
            if (window.innerWidth < 768) {
              toggleMobileMenu();
            }
          });
        });
      }

      function formatDate(dateString) {
        if (!dateString) return "-";
        const date = new Date(dateString);
        return date.toLocaleString("vi-VN", {
          day: "2-digit",
          month: "2-digit",
          year: "numeric",
          hour: "2-digit",
          minute: "2-digit",
        });
      }

      function renderBanners() {
        const search = searchInput.value.trim().toLowerCase();
        const statusFilterValue = statusFilter.value;

        let filtered = allBanners.slice();

        // Filter by search
        if (search) {
          filtered = filtered.filter((banner) => {
            const name = (banner.name || "").toLowerCase();
            return name.includes(search);
          });
        }

        // Filter by status
        if (statusFilterValue !== "") {
          const isDeleted = statusFilterValue === "true";
          filtered = filtered.filter(
            (banner) => banner.is_delete === isDeleted
          );
        }

        bannerList.innerHTML = "";

        if (!filtered.length) {
          bannerList.innerHTML =
            '<div class="col-span-2 text-center py-12 text-xs text-slate-500"><span class="material-symbols-outlined text-4xl text-slate-600 mb-2 block">image</span>Không có banner nào.</div>';
          bannerCount.textContent = "0";
          return;
        }

        filtered.forEach((banner) => {
          const imageUrl = banner.image
            ? `/images/banners/${banner.image}`
            : null;

          const statusLabel = banner.is_delete ? "Đã xóa" : "Đang hoạt động";
          const statusColor = banner.is_delete
            ? "bg-rose-500/10 text-rose-400 border-rose-500/40"
            : "bg-emerald-500/10 text-emerald-400 border-emerald-500/40";

          const bannerCard = document.createElement("div");
          bannerCard.className =
            "banner-card rounded-xl border border-slate-800 bg-slate-950/40 overflow-hidden flex flex-col";
          bannerCard.innerHTML = `
            <div class="relative aspect-video bg-slate-900 overflow-hidden">
              ${
                imageUrl
                  ? `<img src="${imageUrl}" alt="${banner.name}" class="h-full w-full object-cover" onerror="this.parentElement.innerHTML='<div class=\\'h-full w-full flex items-center justify-center text-slate-600\\'><span class=\\'material-symbols-outlined text-4xl\\'>image</span></div>'" />`
                  : '<div class="h-full w-full flex items-center justify-center text-slate-600"><span class="material-symbols-outlined text-4xl">image</span></div>'
              }
              <div class="absolute top-2 right-2">
                <span class="inline-flex items-center rounded-full border px-2 py-0.5 text-[10px] font-medium ${statusColor}">
                  ${statusLabel}
                </span>
              </div>
            </div>
            <div class="p-4 flex-1 flex flex-col">
              <h3 class="text-sm font-semibold text-slate-100 mb-2 line-clamp-1">${
                banner.name || "-"
              }</h3>
              <p class="text-[10px] text-slate-500 mb-3">
                <span class="material-symbols-outlined text-xs align-middle">schedule</span>
                ${formatDate(banner.created_date)}
              </p>
              <div class="flex items-center gap-2 mt-auto">
                <button
                  onclick="editBanner('${banner._id}')"
                  class="flex-1 inline-flex items-center justify-center gap-1 rounded-md border border-slate-700 bg-slate-900/60 px-3 py-2 text-[10px] text-slate-200 hover:bg-slate-800 transition-colors"
                  ${
                    banner.is_delete
                      ? 'disabled title="Không thể sửa banner đã xóa"'
                      : ""
                  }
                  ${
                    banner.is_delete
                      ? 'style="opacity: 0.5; cursor: not-allowed;"'
                      : ""
                  }
                >
                  <span class="material-symbols-outlined text-sm">edit</span>
                  Sửa
                </button>
                <button
                  onclick="deleteBanner('${banner._id}', '${(
            banner.name || ""
          ).replace(/'/g, "\\'")}')"
                  class="flex-1 inline-flex items-center justify-center gap-1 rounded-md border border-rose-700 bg-rose-900/60 px-3 py-2 text-[10px] text-rose-200 hover:bg-rose-800 transition-colors"
                >
                  <span class="material-symbols-outlined text-sm">delete</span>
                  Xóa
                </button>
              </div>
            </div>
          `;
          bannerList.appendChild(bannerCard);
        });

        bannerCount.textContent = String(filtered.length);
      }

      async function loadBanners() {
        try {
          const res = await fetch("/api/banner/sale/list/admin", {
            headers: {
              Authorization: `Bearer ${token}`,
            },
          });
          const data = await res.json();
          if (Array.isArray(data.data)) {
            allBanners = data.data;
          } else {
            allBanners = [];
          }
          renderBanners();
        } catch (err) {
          console.error("Load banners error", err);
          alert("Lỗi khi tải danh sách banner. Vui lòng thử lại.");
        }
      }

      function resetBannerForm() {
        isEditMode = false;
        bannerFormTitle.textContent = "Thêm banner mới";
        submitButtonText.textContent = "Lưu banner";
        bannerForm.reset();
        document.getElementById("editingBannerId").value = "";
        document.getElementById("bannerImagePreview").classList.add("hidden");
        bannerFormMessage.classList.add("hidden");
      }

      async function editBanner(bannerId) {
        const banner = allBanners.find((b) => b._id === bannerId);
        if (!banner) {
          alert("Không tìm thấy banner!");
          return;
        }

        if (banner.is_delete) {
          alert("Không thể sửa banner đã bị xóa!");
          return;
        }

        isEditMode = true;
        bannerFormTitle.textContent = "Sửa banner";
        submitButtonText.textContent = "Cập nhật banner";
        document.getElementById("editingBannerId").value = banner._id;
        document.getElementById("bannerName").value = banner.name || "";

        if (banner.image) {
          const previewImg = document.getElementById("previewBannerImg");
          previewImg.src = `/images/banners/${banner.image}`;
          document
            .getElementById("bannerImagePreview")
            .classList.remove("hidden");
        } else {
          document.getElementById("bannerImagePreview").classList.add("hidden");
        }

        bannerFormMessage.classList.add("hidden");

        // Scroll đến form
        document
          .querySelector('[id^="bannerForm"]')
          .scrollIntoView({ behavior: "smooth", block: "start" });
      }

      async function deleteBanner(bannerId, bannerName) {
        if (!confirm(`Bạn có chắc muốn xóa banner "${bannerName}"?`)) {
          return;
        }

        try {
          const res = await fetch(`/api/banner/sale/delete/${bannerId}`, {
            method: "DELETE",
            headers: {
              Authorization: `Bearer ${token}`,
            },
          });
          const data = await res.json();

          if (res.ok) {
            alert(data.msg || "Xóa banner thành công");
            await loadBanners();
          } else {
            alert(data.msg || "Không thể xóa banner");
          }
        } catch (err) {
          console.error(err);
          alert("Lỗi kết nối server. Vui lòng thử lại.");
        }
      }

      function clearImagePreview() {
        document.getElementById("bannerImage").value = "";
        document.getElementById("bannerImagePreview").classList.add("hidden");
      }

      // Event listeners
      if (addBannerBtnMobile) {
        addBannerBtnMobile.addEventListener("click", resetBannerForm);
      }
      searchInput.addEventListener("input", () => renderBanners());
      statusFilter.addEventListener("change", () => renderBanners());

      resetBannerFormButton.addEventListener("click", () => {
        bannerForm.reset();
        bannerFormMessage.classList.add("hidden");
        document.getElementById("editingBannerId").value = "";
        bannerFormTitle.textContent = "Thêm banner mới";
        submitButtonText.textContent = "Lưu banner";
        document.getElementById("bannerImagePreview").classList.add("hidden");
        isEditMode = false;
      });

      bannerForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        bannerFormMessage.classList.remove("hidden");
        bannerFormMessage.textContent = isEditMode
          ? "Đang cập nhật..."
          : "Đang thêm banner...";
        bannerFormMessage.className = "block text-xs mt-1 text-amber-400";

        const formData = new FormData(bannerForm);
        const editingBannerId =
          document.getElementById("editingBannerId").value;

        // Kiểm tra ảnh khi thêm mới
        if (!isEditMode && !formData.get("image")) {
          bannerFormMessage.textContent = "Vui lòng chọn ảnh banner!";
          bannerFormMessage.className = "block text-xs mt-1 text-rose-400";
          return;
        }

        try {
          let res;
          if (isEditMode && editingBannerId) {
            res = await fetch(`/api/banner/sale/update/${editingBannerId}`, {
              method: "PUT",
              headers: {
                Authorization: `Bearer ${token}`,
              },
              body: formData,
            });
          } else {
            res = await fetch("/api/banner/sale/add", {
              method: "POST",
              headers: {
                Authorization: `Bearer ${token}`,
              },
              body: formData,
            });
          }

          const data = await res.json().catch(() => ({}));

          if (res.ok && data.data) {
            bannerFormMessage.textContent =
              data.msg ||
              (isEditMode
                ? "Đã cập nhật banner thành công!"
                : "Đã thêm banner thành công!");
            bannerFormMessage.className = "block text-xs mt-1 text-emerald-400";
            bannerForm.reset();
            document.getElementById("editingBannerId").value = "";
            bannerFormTitle.textContent = "Thêm banner mới";
            submitButtonText.textContent = "Lưu banner";
            document
              .getElementById("bannerImagePreview")
              .classList.add("hidden");
            isEditMode = false;
            setTimeout(async () => {
              await loadBanners();
            }, 500);
          } else {
            const msg =
              data?.msg || data?.message || data?.error || "Có lỗi xảy ra";
            bannerFormMessage.textContent = msg;
            bannerFormMessage.className = "block text-xs mt-1 text-rose-400";
          }
        } catch (err) {
          console.error(err);
          bannerFormMessage.textContent =
            "Lỗi kết nối server. Vui lòng thử lại.";
          bannerFormMessage.className = "block text-xs mt-1 text-rose-400";
        }
      });

      // Image preview
      document.getElementById("bannerImage").addEventListener("change", (e) => {
        const file = e.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = (e) => {
            document.getElementById("previewBannerImg").src = e.target.result;
            document
              .getElementById("bannerImagePreview")
              .classList.remove("hidden");
          };
          reader.readAsDataURL(file);
        } else {
          document.getElementById("bannerImagePreview").classList.add("hidden");
        }
      });

      logoutBtn.addEventListener("click", () => {
        localStorage.removeItem("auth_token");
        localStorage.removeItem("auth_user");
        window.location.href = "/login";
      });

      // Make functions available globally
      window.editBanner = editBanner;
      window.deleteBanner = deleteBanner;
      window.clearImagePreview = clearImagePreview;

      // Khởi chạy
      loadBanners();
    </script>
  </body>
</html>
