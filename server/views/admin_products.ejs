      productForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        productFormMessage.classList.remove("hidden");
        productFormMessage.textContent = "Đang lưu sản phẩm...";
        productFormMessage.className = "block text-xs mt-1 text-amber-400";

        // Kiểm tra mã sản phẩm
        const productCode = document.getElementById("productCode").value.trim();
        if (!productCode) {
          productFormMessage.textContent = "Vui lòng nhập mã sản phẩm!";
          productFormMessage.className = "block text-xs mt-1 text-rose-400";
          document.getElementById("productCode").focus();
          return;
        }

        // Thu thập dữ liệu variants
        const variantRows = document.querySelectorAll('[id^="variant_"]');
        if (variantRows.length === 0) {
          productFormMessage.textContent =
            "Vui lòng thêm ít nhất 1 biến thể sản phẩm!";
          productFormMessage.className = "block text-xs mt-1 text-rose-400";
          return;
        }

        const variants = [];
        const variantImageFiles = [];

        for (const row of variantRows) {
          const sku = row.querySelector('[name="variant_sku"]')?.value?.trim();
          const size = row
            .querySelector('[name="variant_size"]')
            ?.value?.trim();
          const color = row
            .querySelector('[name="variant_color"]')
            ?.value?.trim();
          const price = row.querySelector('[name="variant_price"]')?.value;
          const quantity = row.querySelector(
            '[name="variant_quantity"]'
          )?.value;
          const imageFile = row.querySelector('[name="variant_image"]')
            ?.files?.[0];

          if (!sku || !size || !color || !price || !quantity) {
            productFormMessage.textContent =
              "Vui lòng điền đầy đủ thông tin cho tất cả biến thể!";
            productFormMessage.className = "block text-xs mt-1 text-rose-400";
            return;
          }

          variants.push({
            sku,
            size,
            color,
            price: Number(price),
            quantity: Number(quantity),
          });

          // Lưu file image để gửi riêng
          if (imageFile) {
            variantImageFiles.push(imageFile);
          } else {
            variantImageFiles.push(null);
          }
        }

        // Tạo FormData
        const formData = new FormData(productForm);
        formData.set("variants", JSON.stringify(variants));

        // Thêm variant images vào FormData với tên riêng biệt
        variantImageFiles.forEach((file, index) => {
          if (file) {
            formData.append(`variant_image_${index}`, file);
          }
        });

        // Xóa các field variant không cần thiết
        formData.delete("variant_sku");
        formData.delete("variant_size");
        formData.delete("variant_color");
        formData.delete("variant_price");
        formData.delete("variant_quantity");
        formData.delete("variant_image");

        try {
          const editingProductId =
            document.getElementById("editingProductId").value;
          const editingVariantId =
            document.getElementById("editingVariantId").value;
          let res;
          let data;

          if (editingProductId && editingVariantId) {
            // Đang ở chế độ sửa - cập nhật sản phẩm và variant
            // Cập nhật thông tin sản phẩm
            const productUpdateData = {
              name: formData.get("name"),
              description: formData.get("description"),
            };

            res = await fetch(`/api/product/edit/${editingProductId}`, {
              method: "PUT",
              headers: {
                "Content-Type": "application/json",
                Authorization: `Bearer ${token}`,
              },
              body: JSON.stringify(productUpdateData),
            });
            data = await res.json().catch(() => ({}));

            if (res.ok) {
              // Cập nhật variant
              const variantRows = document.querySelectorAll('[id^="variant_"]');
              if (variantRows.length > 0) {
                const variantRow = variantRows[0];
                const variantSku = variantRow
                  .querySelector('[name="variant_sku"]')
                  ?.value?.trim();
                const variantSize = variantRow
                  .querySelector('[name="variant_size"]')
                  ?.value?.trim();
                const variantColor = variantRow
                  .querySelector('[name="variant_color"]')
                  ?.value?.trim();
                const variantPrice = variantRow.querySelector(
                  '[name="variant_price"]'
                )?.value;
                const variantQuantity = variantRow.querySelector(
                  '[name="variant_quantity"]'
                )?.value;
                const variantImageFile = variantRow.querySelector(
                  '[name="variant_image"]'
                )?.files?.[0];

                // Tạo FormData cho variant
                const variantFormData = new FormData();
                variantFormData.append("sku", variantSku);
                variantFormData.append("size", variantSize);
                variantFormData.append("color", variantColor);
                variantFormData.append("price", variantPrice);
                variantFormData.append("quantity", variantQuantity);
                if (variantImageFile) {
                  variantFormData.append("image", variantImageFile);
                }

                // Gọi API cập nhật variant
                const variantRes = await fetch(
                  `/api/variant/edit/${editingVariantId}`,
                  {
                    method: "PUT",
                    headers: {
                      Authorization: `Bearer ${token}`,
                    },
                    body: variantFormData,
                  }
                );
                const variantData = await variantRes.json().catch(() => ({}));

                if (variantRes.ok) {
                  productFormMessage.textContent =
                    "Đã cập nhật sản phẩm và biến thể thành công!";
                  productFormMessage.className =
                    "block text-xs mt-1 text-emerald-400";
                } else {
                  productFormMessage.textContent = `Đã cập nhật sản phẩm nhưng lỗi khi cập nhật biến thể: ${
                    variantData?.msg || "Lỗi không xác định"
                  }`;
                  productFormMessage.className =
                    "block text-xs mt-1 text-amber-400";
                }
              } else {
                productFormMessage.textContent =
                  "Đã cập nhật sản phẩm thành công!";
                productFormMessage.className =
                  "block text-xs mt-1 text-emerald-400";
              }

              // Reset form
              productForm.reset();
              document.getElementById("editingProductId").value = "";
              document.getElementById("editingVariantId").value = "";
              document.getElementById("productFormTitle").textContent =
                "Thêm sản phẩm mới";
              document.getElementById("submitButtonText").textContent =
                "Lưu sản phẩm";
              // Hiển thị lại nút "Thêm biến thể"
              document.getElementById("addVariantBtn").style.display = "block";
              document.getElementById("variantsContainer").innerHTML = "";
              variantCounter = 0;
              addVariantRow();
              await loadProducts();
            } else {
              const msg =
                data?.msg ||
                data?.message ||
                data?.error ||
                "Không thể cập nhật sản phẩm.";
              productFormMessage.textContent = msg;
              productFormMessage.className = "block text-xs mt-1 text-rose-400";
            }
          } else {
            // Đang ở chế độ thêm mới
            res = await fetch("/api/product/add", {
              method: "POST",
              headers: {
                Authorization: `Bearer ${token}`,
              },
              body: formData,
            });
            data = await res.json().catch(() => ({}));

            if (res.ok && data.data) {
              productFormMessage.textContent = "Đã thêm sản phẩm thành công!";
              productFormMessage.className =
                "block text-xs mt-1 text-emerald-400";
              productForm.reset();
              // Reset variants
              document.getElementById("variantsContainer").innerHTML = "";
              variantCounter = 0;
              addVariantRow();
              // Reload danh sách sản phẩm
              setTimeout(async () => {
                await loadProducts();
              }, 500);
            } else {
              const msg =
                data?.msg ||
                data?.message ||
                data?.error ||
                "Không thể thêm sản phẩm. Vui lòng kiểm tra lại thông tin.";
              productFormMessage.textContent = msg;
              productFormMessage.className = "block text-xs mt-1 text-rose-400";
              console.error("Add product error:", data);
            }
          }
        } catch (err) {
          console.error(err);
          productFormMessage.textContent =
            "Lỗi kết nối server. Vui lòng thử lại.";
          productFormMessage.className = "block text-xs mt-1 text-rose-400";
        }
      });

      categoryForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        const categoryName = categoryNameInput.value.trim();

        if (!categoryName) {
          categoryFormMessage.textContent = "Vui lòng nhập tên danh mục!";
          categoryFormMessage.className = "block text-xs mt-1 text-rose-400";
