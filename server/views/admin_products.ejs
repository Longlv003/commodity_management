            headers: {
              "Content-Type": "application/json",
              Authorization: `Bearer ${token}`,
            },
            body: JSON.stringify({ name: categoryName }),
          });
          const data = await res.json().catch(() => ({}));

          if (res.ok) {
            categoryFormMessage.textContent = "Đã thêm danh mục thành công!";
            categoryFormMessage.className =
              "block text-xs mt-1 text-emerald-400";
            categoryNameInput.value = "";
            await loadCategories();
            // Reset message sau 2 giây
            setTimeout(() => {
              categoryFormMessage.classList.add("hidden");
            }, 2000);
          } else {
            const msg =
              data?.msg ||
              data?.message ||
              data?.error ||
              "Không thể thêm danh mục.";
            categoryFormMessage.textContent = msg;
            categoryFormMessage.className = "block text-xs mt-1 text-rose-400";
          }
        } catch (err) {
          console.error(err);
          categoryFormMessage.textContent =
            "Lỗi kết nối server. Vui lòng thử lại.";
          categoryFormMessage.className = "block text-xs mt-1 text-rose-400";
        } finally {
          submitCategoryBtn.disabled = false;
        }
      });

      logoutBtn.addEventListener("click", () => {
        localStorage.removeItem("auth_token");
        localStorage.removeItem("auth_user");
        window.location.href = "/login";
      });

      // Khởi chạy
      loadCategories();
      loadProducts();
    </script>
