      async function deleteVariant(variantId, productName) {
        if (
          !confirm(
            `Bạn có chắc muốn xóa variant của sản phẩm "${productName}"?`
          )
        ) {
          return;
        }

        try {
          const res = await fetch(`/api/variant/delete/${variantId}`, {
            method: "DELETE",
            headers: {
              Authorization: `Bearer ${token}`,
            },
          });
          const data = await res.json().catch(() => ({}));

          if (res.ok) {
            const message = data?.msg || "Đã xóa variant thành công!";
            if (data?.data?.product_deleted) {
              alert(
                message +
                  "\n\nLưu ý: Sản phẩm cũng đã bị xóa vì không còn variant nào."
              );
            } else {
              alert(message);
            }
            await loadProducts();
          } else {
            const msg = data?.msg || data?.message || "Không thể xóa variant.";
            alert(msg);
          }
        } catch (err) {
          console.error(err);
          alert("Lỗi kết nối server. Vui lòng thử lại.");
        }
      }

