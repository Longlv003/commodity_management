    <script>
      const token = localStorage.getItem("auth_token");
      const user = JSON.parse(localStorage.getItem("auth_user") || "null");

      if (!token) {
        window.location.href = "/login";
      }

      if (user) {
        document.getElementById("currentUserName").textContent =
          user.fullname || user.name || "Admin";
        document.getElementById("currentUserEmail").textContent =
          user.email || "";
      }

      const logoutBtn = document.getElementById("logoutBtn");
      logoutBtn.addEventListener("click", () => {
        localStorage.removeItem("auth_token");
        localStorage.removeItem("auth_user");
        window.location.href = "/login";
      });

      const mobileMenuBtn = document.getElementById("mobileMenuBtn");
      const sidebar = document.getElementById("sidebar");
      const sidebarOverlay = document.getElementById("sidebarOverlay");
      const closeSidebarBtn = document.getElementById("closeSidebarBtn");
      function toggleMobileMenu() {
        if (!sidebar || !sidebarOverlay) return;
        const isHidden = sidebar.classList.contains("hidden");
        if (isHidden) {
          sidebar.classList.remove("hidden");
          sidebar.classList.add("flex");
          sidebarOverlay.classList.remove("hidden");
        } else {
          sidebar.classList.add("hidden");
          sidebar.classList.remove("flex");
          sidebarOverlay.classList.add("hidden");
        }
      }
      mobileMenuBtn?.addEventListener("click", toggleMobileMenu);
      sidebarOverlay?.addEventListener("click", toggleMobileMenu);
      closeSidebarBtn?.addEventListener("click", toggleMobileMenu);

      const todayRevenueEl = document.getElementById("todayRevenue");
      const pendingOrdersEl = document.getElementById("pendingOrders");
      const totalProductsEl = document.getElementById("totalProducts");
      const activeCustomersEl = document.getElementById("activeCustomers");
      const quickOrdersCountEl = document.getElementById("quickOrdersCount");
      const quickLowStockEl = document.getElementById("quickLowStock");
      const quickNewCustomersEl = document.getElementById("quickNewCustomers");
      const quickReportGrowthEl = document.getElementById("quickReportGrowth");
      const quickShippingEl = document.getElementById("quickShipping");
      const quickTrendingEl = document.getElementById("quickTrending");
      const recentOrdersEl = document.getElementById("recentOrders");
      const topCustomersEl = document.getElementById("topCustomers");
      const refreshBtn = document.getElementById("refreshDashboardBtn");

      function formatCurrency(value) {
        return (Number(value) || 0).toLocaleString("vi-VN", {
          style: "currency",
          currency: "VND",
          maximumFractionDigits: 0,
        });
      }

      function formatDate(value) {
        if (!value) return "-";
        return new Date(value).toLocaleString("vi-VN", {
          hour12: false,
          day: "2-digit",
          month: "2-digit",
          year: "numeric",
          hour: "2-digit",
          minute: "2-digit",
        });
      }

      async function loadDashboard() {
        try {
          const [ordersRes, revenueRes, customersRes, productsRes] =
            await Promise.all([
              fetch("/api/order/admin", {
                headers: { Authorization: `Bearer ${token}` },
              }),
              fetch("/api/report/revenue?range=day", {
                headers: { Authorization: `Bearer ${token}` },
              }),
              fetch("/api/customers/admin/overview", {
                headers: { Authorization: `Bearer ${token}` },
              }),
              fetch("/api/product/list/admin", {
                headers: { Authorization: `Bearer ${token}` },
              }).catch(() =>
                fetch("/api/product/list", { headers: {} })
              ),
            ]);

          const ordersData = await ordersRes.json().catch(() => ({}));
          const revenueData = await revenueRes.json().catch(() => ({}));
          const customersData = await customersRes.json().catch(() => ({}));
          const productsData = await productsRes.json().catch(() => ({}));

          if (!ordersRes.ok) throw new Error("Không thể tải đơn hàng.");
          if (!revenueRes.ok) throw new Error("Không thể tải doanh thu.");
          if (!customersRes.ok) throw new Error("Không thể tải khách hàng.");

          const orders = Array.isArray(ordersData.data) ? ordersData.data : [];
          const customers = Array.isArray(customersData.data)
            ? customersData.data
            : [];
          const revenue = revenueData.data || {};
          const productList =
            Array.isArray(productsData.data) ||
            Array.isArray(productsData)
              ? productsData.data || productsData
              : [];

          const today = new Date();
          const todayOrders = orders.filter((order) => {
            const d = new Date(order.created_date);
            return (
              d.getDate() === today.getDate() &&
              d.getMonth() === today.getMonth() &&
              d.getFullYear() === today.getFullYear()
            );
          });
          const todayRevenue = todayOrders.reduce(
            (sum, order) => sum + (order.total_amount || 0),
            0
          );
          todayRevenueEl.textContent = formatCurrency(todayRevenue);

          pendingOrdersEl.textContent = orders.filter(
            (order) => order.status === "pending" || order.status === "processing"
          ).length;

          totalProductsEl.textContent = productList.length || 0;
          activeCustomersEl.textContent = customers.filter(
            (customer) => customer.is_active && customer.totalOrders > 0
          ).length;

          const recentWeek = new Date();
          recentWeek.setDate(recentWeek.getDate() - 7);
          quickOrdersCountEl.textContent = orders.filter(
            (order) => new Date(order.created_date) >= recentWeek
          ).length;

          quickLowStockEl.textContent = productList.filter(
            (product) => (product.quantity || 0) < 5
          ).length;

          quickNewCustomersEl.textContent = customers.filter((customer) => {
            const created = new Date(customer.createdAt);
            return created >= recentWeek;
          }).length;

          const revenueSeries = revenue.series || [];
          if (revenueSeries.length >= 2) {
            const latest = revenueSeries[revenueSeries.length - 1].revenue || 0;
            const prev = revenueSeries[revenueSeries.length - 2].revenue || 1;
            const growth = ((latest - prev) / prev) * 100;
            quickReportGrowthEl.textContent = `${growth > 0 ? "+" : ""}${growth.toFixed(
              1
            )}%`;
          } else {
            quickReportGrowthEl.textContent = "0%";
          }

          quickShippingEl.textContent = orders.filter(
            (order) => order.status === "shipping"
          ).length;

          quickTrendingEl.textContent = todayOrders.reduce(
            (sum, order) => sum + (order.item_count || 0),
            0
          );

          const recentOrders = orders.slice(0, 4);
          if (!recentOrders.length) {
            recentOrdersEl.innerHTML =
              '<p class="text-xs text-slate-500">Chưa có đơn hàng.</p>';
          } else {
            recentOrdersEl.innerHTML = recentOrders
              .map(
                (order) => `
                  <div class="flex items-center justify-between border border-slate-800 rounded-xl p-3">
                    <div>
                      <p class="text-xs font-semibold">${order.customer?.name || "Khách hàng"}</p>
                      <p class="text-[11px] text-slate-500">${formatDate(order.created_date)}</p>
                    </div>
                    <div class="text-right">
                      <p class="text-xs font-semibold">${formatCurrency(order.total_amount)}</p>
                      <p class="text-[11px] text-slate-500">${order.status_label || order.status}</p>
                    </div>
                  </div>
                `
              )
              .join("");
          }

          const topCustomers = customers
            .slice()
            .sort((a, b) => (b.totalSpent || 0) - (a.totalSpent || 0))
            .slice(0, 4);
          if (!topCustomers.length) {
            topCustomersEl.innerHTML =
              '<p class="text-xs text-slate-500">Chưa có dữ liệu khách hàng.</p>';
          } else {
            topCustomersEl.innerHTML = topCustomers
              .map(
                (customer) => `
                  <div class="flex items-center justify-between border border-slate-800 rounded-xl p-3">
                    <div>
                      <p class="text-xs font-semibold">${customer.name || "Khách hàng"}</p>
                      <p class="text-[11px] text-slate-500">${customer.email || ""}</p>
                    </div>
                    <div class="text-right">
                      <p class="text-xs font-semibold">${formatCurrency(customer.totalSpent)}</p>
                      <p class="text-[11px] text-slate-500">${customer.totalOrders || 0} đơn</p>
                    </div>
                  </div>
                `
              )
              .join("");
          }
        } catch (error) {
          console.error("Dashboard error", error);
          recentOrdersEl.innerHTML = `<p class="text-xs text-rose-400">${error.message}</p>`;
